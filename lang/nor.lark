// NoR의 문법을 정의합니다.
start: statement+

statement: STRING

STRING: DQ_STRING | SQ_STRING
BOOLEAN: TRUE | FALSE 

TRUE: "true" | "True" | "참"
FALSE: "false" | "False" | "거짓"

DQ_STRING: /"[^"\\]*(\\.[^"\\]*)*"/
SQ_STRING: /'[^'\\]*(\\.[^'\\]*)*'/

LINE_COMMENT: /\/\/.*/
BLOCK_COMMENT: /\/\*.*?\*\//s

// 공백을 무시
%import common.WS
%ignore WS

// 주석을 무시
%ignore LINE_COMMENT
%ignore BLOCK_COMMENT